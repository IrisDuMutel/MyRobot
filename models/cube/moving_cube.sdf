<?xml version="1.0"?>
<sdf version="1.5">
  <model name = "cube">
    <static>false</static>

    <link name="cube_base">
      <pose>0 0 0.1 0 0 0</pose>
      <collision name="collision">
        <geometry>
          <box>
            <size>0.4 0.2 0.1</size>
          </box>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>0</mu>
              <mu2>0</mu2>
            </ode>
          </friction>
        </surface>
      </collision>
      <visual name="visual">
        <geometry>
          <box>
            <size>0.4 0.2 0.1</size>
          </box>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Grey</name>
          </script>
        </material>
      </visual>

      <collision name = 'caster_collision'>
        <pose>-0.15 0 -0.05 0 0 0</pose>
        <geometry>
          <sphere>
            <radius>0.05</radius>
          </sphere>
        </geometry>

        <surface>
          <friction>
            <ode>
              <mu>0</mu>
              <mu2>0</mu2>
              <slip1>0.1</slip1>
              <slip2>0.1</slip2>
            </ode>
          </friction>
        </surface> 
      </collision>

      <visual name='caster_collision'>
        <pose>-0.15 0 -0.05 0 0 0</pose>
        <geometry>
          <sphere>
            <radius>0.05</radius>
          </sphere>
        </geometry>
      </visual>
        



    </link>

    <link name='left_wheel'>
      <pose>0.1 0.13 0.1 0 1.5707 1.5707 </pose>
        <collision name='  collision'>
           <geometry>
            <cylinder>
              <radius>.1</radius>
              <length>0.05</length>
            </cylinder>
          </geometry>
        </collision>

        <visual name='visual'>
          <geometry>
            <cylinder>
              <radius>.1</radius>
              <length>0.05</length>
            </cylinder>
          </geometry>
        </visual>
    </link>
      
    <link name='right_wheel'>
      <pose>0.1 -0.13 0.1 0 1.5707 1.5707 </pose>
        <collision name='  collision'>
           <geometry>
            <cylinder>
              <radius>.1</radius>
              <length>0.05</length>
            </cylinder>
          </geometry>
        </collision>

        <visual name='visual'>
          <geometry>
            <cylinder>
              <radius>.1</radius>
              <length>0.05</length>
            </cylinder>
          </geometry>
        </visual>
    </link>

    <joint type='revolute' name='left_wheel_hinge'>
      <pose>0 0 -0.03 0 0 0</pose>
      <child>left_wheel</child>
      <parent>cube_base</parent>
      <axis>
        <xyz>0 1 0</xyz>
      </axis>
    </joint>

    <joint type='revolute' name='right_wheel_hinge'>
      <pose>0 0 0.03 0 0 0</pose>
      <child>right_wheel</child>
      <parent>cube_base</parent>
      <axis>
        <xyz>0 1 0</xyz>
      </axis>
    </joint>

    <link name='RealSense'>
      <pose>0 0 0.16 0 0 -3.14</pose>
        <collision name='collision'>
           <geometry>
            <box>
              <size>0.05 0.05 0.05</size>
            </box>
          </geometry>
        </collision>

        <visual name='visual'>
          <geometry>
            <box>
              <size>0.05 0.05 0.05</size>
            </box>
          </geometry>
        </visual>
        <sensor type='camera' name='RealSense'>
          <always_on>true</always_on>
          <visualize>true</visualize>
          
          <camera name='Realsense'>
            <depth_camera>
              <output>depths</output>
            </depth_camera>        
          </camera>
          <plugin name="my_robot_camera_controller"
            filename="myrobot_camera.so">
          <alwaysOn>true</alwaysOn>
          <updateRate>0.0</updateRate>
          <cameraName>RealSense/</cameraName>
          <imageTopicName>image_realsense</imageTopicName>
          <cameraInfoTopicName>camera_realsense</cameraInfoTopicName>
          <frameName>RealSense</frameName>
          <hackBaseline>0.12</hackBaseline>
          <distortionK1>0.0</distortionK1>
          <distortionK2>0.0</distortionK2>
          <distortionK3>0.0</distortionK3>
          <distortionT1>0.0</distortionT1>
          <distortionT2>0.0</distortionT2>
          </plugin>
        </sensor>
    </link>

    <joint type='fixed' name='RealSenseJoint'>
      <pose>0 0 0 0 0 0</pose>
      <child>RealSense</child>
      <parent>cube_base</parent>
      <axis>
        <xyz>0 0 1</xyz>
      </axis>
    </joint>
    
    <plugin name="my_robot_camera_controller"
      filename="myrobot_camera.so">
    <alwaysOn>true</alwaysOn>
    <updateRate>0.0</updateRate>
    <cameraName>RealSense/</cameraName>
    <imageTopicName>image_realsense</imageTopicName>
    <cameraInfoTopicName>camera_realsense</cameraInfoTopicName>
    <frameName>RealSense</frameName>
    <hackBaseline>0.12</hackBaseline>
    <distortionK1>0.0</distortionK1>
    <distortionK2>0.0</distortionK2>
    <distortionK3>0.0</distortionK3>
    <distortionT1>0.0</distortionT1>
    <distortionT2>0.0</distortionT2>
    </plugin>
  </model>
</sdf>

      
